{% extends 'base.html.twig' %}

{% block title %}Footer index{% endblock %}

{% block body %}
    <h1>Footer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Instagram</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for footer in footers %}
            <tr>
                <td>{{ footer.id }}</td>
                <td>{{ footer.address }}</td>
                <td>{{ footer.phone }}</td>
                <td>{{ footer.instagram }}</td>
                <td>
                    <a href="{{ path('footer_show', {'id': footer.id}) }}">show</a>
                    <a href="{{ path('footer_edit', {'id': footer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('footer_new') }}">Create new</a>
{% endblock %}
