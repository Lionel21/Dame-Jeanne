{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Modifier un message{% endblock %}

{% block body %}
    <div class="mt-5 container-xl container-lg container-fluid">
        <h1 class="mt-3 mb-4 text-center">Modifier un message</h1>
        <div class="admin-section pt-5 pb-5 px-5 border p-4">
            {{ include('admin_alert/_form.html.twig', {'button_label': 'Valider'}) }}
        </div>
        <div class="row justify-content-between">
            <div class="col col-lg-4">
                <a href="{{ path('admin_alert_index') }}" class="btn btn-dark m-5"><i
                            class="far fa-arrow-alt-circle-left"></i> Liste des messages</a>
            </div>
            <div class="col col-lg-2">
                {{ include('admin_alert/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
