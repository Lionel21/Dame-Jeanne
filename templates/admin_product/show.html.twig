{% extends 'layout_admin.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">{{ product.name }}</h1>
        <div class="admin-section pt-5 pb-5 px-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Ann√©e</th>
                    <td>{{ product.year }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ product.type }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td class="test">
                        <img src="{% if product.imageName is empty %}
                                    {{ asset('build/event_1.jpg') }}
                            {% else %}
                                    {{ vich_uploader_asset(product, 'imageFile') }}
                                {% endif %}"
                             alt="{{ product.name }}" class="product-picture w-100">
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <a href="{{ path('product_edit', {'id': product.id}) }}"
                   class="btn btn-outline-danger"><span uk-icon="pencil"></span>

                </a>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('admin_product_index') }}" class="btn btn-dark mt-5"><span uk-icon="home"></span>

            </a>
            {{ include('admin_product/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
