{% extends 'layout_admin.html.twig' %}

{% block title %}Menu des categories d'articles{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5">Menu des catégories d'articles</h1>
        <div class="admin-section pt-5 pb-5 px-5">
            <a href="{{ path('admin_category_new') }}" class="btn btn-outline-danger mb-5">Créer une catégorie
                d'article</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th class="col-lg-3">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('admin_category_show', {'id': category.id}) }}"
                               class="btn btn-outline-dark m-2">Aperçu</a>
                            <a href="{{ path('admin_category_edit', {'id': category.id}) }}"
                               class="btn btn-outline-dark m-2">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune catégorie trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
