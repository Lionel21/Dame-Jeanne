<h1 class="text-center pt-5 pb-5">Nos actus : </h1>
<section class="section-article">
    <div class="container">
        <div class="row justify-content-around">
            {% for article in articles %}
                {% if loop.first %}
                    <div class="col-12">
                        <h2 class="text-center artilce-title mb-5">A la une</h2>
                        <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
                            <div class="uk-card-media-left uk-cover-container">
                                <img src="{% if article.picture is empty %}
                                                    {{ asset('build/got.jpg') }}
                                                {% endif %}"
                                     alt="{{ article.title }}" class="article-picture w-100" uk-cover>
                                <canvas width="600" height="400"></canvas>
                            </div>
                            <div>
                                <div class="uk-card-body">
                                    <h3 class="uk-card-title">{{ article.title }}</h3>
                                    <p>{{ article.content|slice(1, 100) }}</p>
                                    <p>{{ article.date|date('d/m/Y H:i:s') }}</p>
                                    <p>{{ article.author }}</p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-outline-danger reserve-btn w-15 m-4"
                                       href="#">Détail de
                                        l'article</a>
                                </div>
                            </div>
                        </div>
                        <h2 class="text-center artilce-title mt-5 mb-5">Nos articles</h2>
                    </div>
                {% else %}
                    <div class="col-md-4 col-lg-5 my-5">
                        <div class="uk-text-center">
                            <div class="uk-inline-clip uk-transition-toggle uk-light" tabindex="0">
                                <img src="{% if article.picture is empty %}
                                                    {{ asset('build/got.jpg') }}
                                                {% endif %}"
                                     alt="{{ article.title }}" class="article-picture w-100">
                                <div class="uk-position-center">
                                    <div class="uk-transition-slide-top-small"><h4
                                                class="uk-margin-remove mb-3">{{ article.title }}</h4></div>
                                    <div class="uk-transition-slide-bottom-small">
                                        <p class="uk-margin-remove text-justify mb-3 mx-3">{{ article.content|slice(1, 80) }}</p>
                                        <p class="uk-margin-remove text-left ml-3">{{ article.date|date('d/m/Y H:i:s') }}</p>
                                        <p class="uk-margin-remove text-left ml-3">{{ article.author }}</p>
                                    </div>
                                </div>
                            </div>
                            <a class="btn btn-outline-danger reserve-btn w-15 m-4"
                               href="#">Détail de
                                l'article</a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn btn-outline-danger reserve-btn w-15 m-4"
               href="#">Toutes nos actus</a>
        </div>
    </div>
</section>