<h1 class="text-center news-title pt-5 pb-5" id="news">Nos actus : </h1>
<section class="section-home-article">
    <div class="container" data-aos="zoom-in-down" data-aos-delay="300" data-aos-easing="ease-in-sine">
        <div class="row justify-content-around">
            {% for article in articles %}
                {% if loop.first %}
                    <div class="col-12">
                        <h2 class="text-center artilce-title mb-5">À la une</h2>
                        <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
                            <div class="uk-card-media-left uk-cover-container">

                                <img src="{% if article.imageName is empty %}
                                    {{ asset('build/event_1.jpg') }}
                            {% else %}
                                    {{ vich_uploader_asset(article, 'imageFile') }}
                                {% endif %}"
                                     alt="{{ article.title }}" class="article-picture-une w-100"
                                     style="object-fit: cover"
                                     uk-cover>
                                <canvas width="600" height="400"></canvas>
                            </div>
                            <div>
                                <div class="uk-card-body">
                                    <p class="article-content">{{ article.date|date('d/m/Y') }} - <span
                                                class="badge badge-danger">{{ article.category.name }}</span></p>
                                    <h3 class="uk-card-title article-title">{{ article.title }}</h3>
                                    <p class="article-content">{{ article.content|striptags|slice(0, 300)|raw }}</p>
                                    <p class="article-content">{{ article.author }}</p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-outline-danger reserve-btn w-15 m-4"
                                       href="{{ path('blog_show', {'slug':article.slug}) }}">Détail de
                                        l'article</a>
                                </div>
                            </div>
                        </div>
                        <h2 class="text-center artilce-title mt-5 mb-5">Nos articles</h2>
                    </div>
                {% else %}
                    <div class="col-md-10 col-lg-5 my-5">
                        <div class="uk-text-center">
                            <div class="uk-inline-clip uk-transition-toggle" tabindex="0">
                                <img src="{% if article.imageName is empty %}
                                    {{ asset('build/event_1.jpg') }}
                            {% else %}
                                    {{ vich_uploader_asset(article, 'imageFile') }}
                                {% endif %}"
                                     alt="{{ article.title }}" class="article-picture w-100">
                                <div class="uk-transition-slide-bottom uk-position-bottom uk-overlay uk-overlay-default">
                                    <p class="card-text"><small
                                                class="text-muted">Date
                                            : {{ article.date|date('d/m/Y') }}</small> - <span
                                                class="badge badge-danger">{{ article.category.name }}</span></p>
                                    <h3 class="uk-margin-remove">{{ article.title }}</h3>
                                </div>
                            </div>
                            <a class="btn btn-outline-danger reserve-btn w-15 m-4"
                               href="{{ path('blog_show', {'slug':article.slug}) }}">Détail de
                                l'article</a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn btn-outline-danger reserve-btn w-15 m-4"
               href="{{ path('blog_index') }}">Toutes nos actus</a>
        </div>
    </div>
</section>
