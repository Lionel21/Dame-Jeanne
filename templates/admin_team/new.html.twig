{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Nouveau membre {% endblock %}

{% block body %}
    <div class="mt-5 container-xl container-lg container-fluid">
        <h1 class="text-center mt-3 mb-4">Créer un membre</h1>
        <div class="admin-section pt-5 pb-5 px-5 border p-4">
            {{ include('admin_team/_form.html.twig') }}
        </div>
        <div class="flex d-flex justify-content-around">
            <a href="{{ path('admin_team_index') }}" class="btn btn-dark m-5"><i class="far fa-arrow-alt-circle-left"></i>
                Liste des membres de l'équipe
            </a>
        </div>
    </div>
