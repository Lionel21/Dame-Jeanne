{% extends 'layout.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
        <h1 class="ml-3 mr-3 mb-5 pt-4 pb-5 m-md-5 text-center">{{ article.title }}</h1>
        <div class="container pb-5">
            <div class="row justify-content-center">
                <div class="col-md-10 col-10 card-img-block">
                    <div class="card-img-block-top">
                        <img src="{% if article.picture is empty %}
                                                    {{ asset('build/event_1.jpg') }}
                                                {% endif %}"
                             alt="{{ article.title }}" class="article-picture w-100">
                    </div>
                </div>
                <div class="col-md-10 col-10">
                    <div class="card-body">
                        <p class="card-text text-justify">{{ article.content }}</p>
                        <p class="card-text"><small
                                    class="text-muted">Date
                                : {{ article.date|date('d/m/Y H:i:s') }}</small>
                        <p class="card-text"><small
                                    class="text-muted">
                                {{ article.author }}</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center pt-5 pb-5">
            <a class="btn btn-dark" href="{{ path('blog') }}">Retour</a>
        </div>
{% endblock %}
