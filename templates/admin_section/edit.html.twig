{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Modifier une section d'article{% endblock %}

{% block body %}
    <div class="mt-5 container-xl container-lg container-fluid">
        <h1 class="mt-3 mb-4 text-center">Modifier la section "{{ section.name }}"</h1>
        <div class="admin-section pt-5 pb-5 px-5 border p-4">
            {{ include('admin_section/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
        <div class="row justify-content-between">
            <div class="col col-lg-4">
                <a href="{{ path('section_index') }}" class="btn btn-dark m-5">Liste des sections de produits</a>
            </div>
            <div class="col col-lg-3">
                {{ include('admin_section/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
