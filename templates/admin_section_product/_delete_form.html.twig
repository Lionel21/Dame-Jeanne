<form method="post" action="{{ path('section_delete', {'id': section.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette section de produit et les produits liés ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ section.id) }}">
    <button class="btn btn-dark mt-5"><span uk-icon="trash"></span>
        Supprimer
    </button>
</form>
