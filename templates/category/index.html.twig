{% extends 'layout_admin.html.twig' %}

{% block title %}Menu des categories{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5">Menu des catégories</h1>
        <div class="admin-section pt-5 pb-5 px-5">
            <a href="{{ path('category_new') }}" class="btn btn-outline-danger mb-5">Créer une catégorie</a>

            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-dark m-2">Aperçu</a>
                            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-dark m-2">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
