{% extends 'layout_admin.html.twig' %}

{% block title %}Coordinate{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Coordonnées</h1>
        <div class="admin-section pt-5 pb-5 px-5">

            <table class="table">
                <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ coordinate.name }}</td>
                </tr>
                <tr>
                    <th>Adress</th>
                    <td>{{ coordinate.adress }}</td>
                </tr>
                <tr>
                    <th>ZipCode</th>
                    <td>{{ coordinate.zipCode }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ coordinate.city }}</td>
                </tr>
                <tr>
                    <th>Latitude</th>
                    <td>{{ coordinate.latitude }}</td>
                </tr>
                <tr>
                    <th>Longitude</th>
                    <td>{{ coordinate.longitude }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ coordinate.telephone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ coordinate.email }}</td>
                </tr>
                <tr>
                    <th>Horraires d'ouverture</th>
                    <td>{{ coordinate.timetableOpen|date('H:i') }}</td>
                </tr>
                <tr>
                    <th>Horraires de fermeture</th>
                    <td>{{ coordinate.timetableClose|date('H:i') }}</td>
                </tr>
                <tr>
                    <th>Horraires d'ouverture week-end</th>
                    <td>{{ coordinate.timetableOpenWeekend|date('H:i') }}</td>
                </tr>
                <tr>
                    <th>Horraires de fermeture week-end</th>
                    <td>{{ coordinate.timetableCloseWeekend|date('H:i') }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <a href="{{ path('admin_coordinate_edit', {'id': coordinate.id}) }}"
                   class="btn btn-outline-danger mt-5">Modifier</a>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('admin_coordinate_index') }}" class="btn btn-dark mt-5">Liste des catégories d'articles</a>
            {{ include('coordinate/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
