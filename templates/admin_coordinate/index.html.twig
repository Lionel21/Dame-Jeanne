{% extends 'layout_admin.html.twig' %}

{% block title %}Menu des coordonnées{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center mt-5 mb-5">Menu des coordonnées</h1>
        <div class="admin-section pt-5 pb-5 px-5">
            <a href="{{ path('admin_coordinate_new') }}" class="btn btn-outline-danger mb-5">Créer une adresse</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Code postal</th>
                    <th>Ville</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th>Heures d'ouverture</th>
                    <th>Heures de fermeture</th>
                    <th>Heures d'ouverture week-end</th>
                    <th>Heures fermeture week-end</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for coordinate in coordinates %}
                    <tr>
                        <td>{{ coordinate.name }}</td>
                        <td>{{ coordinate.adress }}</td>
                        <td>{{ coordinate.zipCode }}</td>
                        <td>{{ coordinate.city }}</td>
                        <td>{{ coordinate.latitude }}</td>
                        <td>{{ coordinate.longitude }}</td>
                        <td>{{ coordinate.telephone }}</td>
                        <td>{{ coordinate.email }}</td>
                        <td>{{ coordinate.timetableOpen|date('H:i') }}</td>
                        <td>{{ coordinate.timetableClose|date('H:i')}}</td>
                        <td>{{ coordinate.timetableOpenWeekend|date('H:i')}}</td>
                        <td>{{ coordinate.timetableCloseWeekend|date('H:i')}}</td>
                        <td>
                            <a href="{{ path('admin_coordinate_show', {'id': coordinate.id}) }}"
                               class="btn btn-outline-dark m-2">Aperçu</a>
                            <a href="{{ path('admin_coordinate_edit', {'id': coordinate.id}) }}"
                               class="btn btn-outline-dark m-2">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Aucune adresse trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
