{% extends 'layout_admin.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Message actuel</h1>
        <div class="admin-message pt-5 pb-5 px-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Texte du message</th>
                    <td>{{ message.text }}</td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center">
                <a href="{{ path('message_edit', {'id': message.id}) }}"
                   class="btn btn-outline-danger"><span uk-icon="pencil"></span>
                    Modifier
                </a>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('admin_message_index') }}" class="btn btn-dark mt-5"><i class="far fa-arrow-alt-circle-left"></i>
                Liste des messages
            </a>
            {{ include('message/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
