{% extends 'layout_admin.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Message</h1>
        <div class="admin-message pt-5 pb-5 px-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Texte du message</th>
                    <td>{{ message.text }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td class="test">
                        <img src="{% if message.imageName is empty %}
                                    {{ asset('build/event_1.jpg') }}
                            {% else %}
                                    {{ vich_uploader_asset(message, 'imageFile') }}
                                {% endif %}"
                             alt="{{ message.imageName }}" class="message-picture w-100">
                    </td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center">
                <a href="{{ path('message_edit', {'id': message.id}) }}"
                   class="btn btn-outline-danger"><span uk-icon="pencil"></span>
                    Editer
                </a>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('admin_message_index') }}" class="btn btn-dark mt-5"><span uk-icon="home"></span>
                Retour
            </a>
            {{ include('message/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
