{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Modifier le message{% endblock %}

{% block body %}
    <div class="mt-5 container-xl container-lg container-fluid">
        <h1 class="mt-3 mb-4 text-center">Modifier le message et son illustration</h1>
        <div class="admin-message pt-5 pb-5 px-5 border p-4">
            {{ include('message/_form.html.twig', {'button_label': ''}) }}
        </div>
        <div class="row justify-content-between">
            <div class="col col-lg-4">
                <a href="{{ path('admin_message_index') }}" class="btn btn-dark m-5"><span uk-icon="home"></span>
                    Retour
                </a>
            </div>
            <div class="col col-lg-3">
                {{ include('message/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
