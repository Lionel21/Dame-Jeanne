{% extends 'layout_admin.html.twig' %}

{% block title %}{{ partner.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Notre partenaire {{ partner.name }}</h1>
        <div class="admin-partner pt-5 pb-5 px-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ partner.name }}</td>
                </tr>
                <tr>
                    <th>Link</th>
                    <td>{{ partner.link }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <a href="{{ path('admin_partner_edit', {'id': partner.id}) }}"
                   class="btn btn-outline-danger"><span uk-icon="pencil"></span>
                    Editer
                </a>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('admin_partner_index') }}" class="btn btn-dark mt-5"><span uk-icon="home"></span>
                Liste des partenaires
            </a>
            {{ include('admin_partner/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
