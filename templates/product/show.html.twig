{% extends 'layout.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <h1 class="ml-3 mr-3 mb-5 pt-4 pb-5 m-md-5 text-center">{{ product.name }} - {{ product.year }}</h1>
    <div class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-10 card-img-block">
                <div class="card-img-block-top">
                    <img src="{% if product.imageName is empty %}
                                    {{ asset('build/event_1.jpg') }}
                            {% else %}
                                    {{ vich_uploader_asset(product, 'imageFile') }}
                                {% endif %}"
                         alt="{{ product.name }}" class="product-picture w-100">
                </div>
            </div>
            <div class="col-md-10 col-10">
                <div class="card-body">
                    <p class="card-text">
                        <span class="badge badge-danger">{{ product.section.name }}</span>
                        <small
                                class="text-muted">
                            {{ product.type }}</small>
                    </p>
                    <p class="card-text text-justify">{{ product.description|raw }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center pt-5 pb-5">
        <a class="btn btn-dark" href="{{ path('product_index') }}">Retour</a>
    </div>
{% endblock %}