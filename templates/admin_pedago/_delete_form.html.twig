<form method="post" action="{{ path('pedago_delete', {'id': pedago.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce mot ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pedago.id) }}">
    <button class="btn btn-dark mt-5"><span uk-icon="trash"></span>
        Supprimer
    </button>
</form>
