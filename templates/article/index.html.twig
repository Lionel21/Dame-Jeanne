{% extends 'layout_admin.html.twig' %}

{% block title %}Menu des articles{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5">Menu des articles</h1>
        <div class="admin-section pt-5 pb-5 px-5">
            <a href="{{ path('admin_article_new') }}" class="btn btn-outline-danger mb-5">Créer un article</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Auteur</th>
                    <th>Date</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>{{ article.content }}</td>
                        <td>{{ article.author }}</td>
                        <td>{{ article.date ? article.date|date('d/m/Y H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('admin_article_show', {'id': article.id}) }}">Aperçu</a>
                            <a href="{{ path('admin_article_edit', {'id': article.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
