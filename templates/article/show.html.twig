{% extends 'layout_admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">{{ article.title }}</h1>
        <div class="admin-section pt-5 pb-5 px-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ article.title }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ article.content }}</td>
                </tr>
                <tr>
                    <th>Auteur</th>
                    <td>{{ article.author }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <a href="{{ path('admin_article_edit', {'id': article.id}) }}"
                   class="btn btn-outline-danger">Modifier</a>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('admin_article_index') }}" class="btn btn-dark mt-5">Liste des articles</a>
            {{ include('article/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
