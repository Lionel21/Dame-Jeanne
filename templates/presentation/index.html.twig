{% extends 'layout.html.twig' %}

{% block title %}L'esprit Dame Jeanne{% endblock %}

{% block body %}
    <h1 class="text-center news-title mb-5 pt-5">Faites connaissances avec l'Ã©quipe du Dame Jeanne</h1>
    <div class="container">
        <div class="uk-flex uk-flex-center">
            {% for team in teams %}
                <div uk-scrollspy="cls:uk-animation-fade">
                    <div class="uk-margin-medium-right uk-grid-match" uk-grid>
                        <div>
                            <div class="uk-card uk-card-default uk-card-body"
                                 uk-scrollspy="cls: uk-animation-slide-left; repeat: true">
                                <img src="{{ vich_uploader_asset(team, 'imageFile') }}" class="team-picture w-100"
                                     alt="{{ team.imageName }}">
                                <h3 class="uk-card-title">{{ team.firstname }}  {{ team.lastname }}</h3>
                                <p>{{ team.description|raw }}</p>
                                <p>{{ team.email|raw }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
