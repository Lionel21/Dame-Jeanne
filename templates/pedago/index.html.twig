{% extends 'layout.html.twig' %}

{% block title %}Un peu de p√©dagogie{% endblock %}

{% block body %}
        <h1 class="container text-center pedago-title mt-5 mb-5 pt-5">Le petit dico du Dame Jeanne...</h1>

        <div class="container pedago-article pb-5">
            {% for pedago in pedagos %}
                <ul uk-accordion="collapsible: true">
                    <li>
                        <h3 class="uk-accordion-title px-3">{{ pedago.title }}</h3>
                        <div class="uk-accordion-content uk-card-body">
                            <p class="content px-3 pb-3">{{ pedago.content|striptags|raw }}</p>
                            {% if pedago.link is not null %}
                                <a href="{{ pedago.link }}" target="_blank" class="pedago-link d-flex justify-content-center pt-3 pb-5"><span
                                            class="pedago-effect">Pour un peu plus de lecture</span></a>
                            {% endif %}
                        </div>
                    </li>
                </ul>
            {% endfor %}
        </div>
    <hr class="uk-divider-icon mt-5">
{% endblock %}

